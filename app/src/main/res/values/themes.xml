<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main application theme -->
    <style name="Theme.TelePromptOnePro" parent="android:Theme.Material.Light.NoActionBar">

        <!-- Application background after loading -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- No delay in displaying the interface -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Splash Screen with gradient only -->
        <!-- Transparent icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_transparent_1dp</item>
        <!-- Gradient background -->
        <item name="android:windowSplashScreenBackground">@drawable/splash_background_gradient</item>
        <!-- Animation duration (0.3 sec) -->
        <item name="android:windowSplashScreenAnimationDuration">300</item>
        <!-- Transparent background under icon -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

    </style>

</resources>
